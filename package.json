{
  "name": "@statespace/monorepo",
  "version": "0.2.0-beta.1",
  "private": true,
  "type": "module",
  "workspaces": [
    "examples/*",
    "packages/*",
    "packages/studies/*"
    
  ],
  "scripts": {
    "context": "bun run scripts/context.ts",
    "memgraph:codegen": "bun run --env-file=.env --filter @statespace/memgraph codegen",
    "memgraph:start": "bun run --env-file=.env --filter @statespace/memgraph start",
    "agent:start": "bun run --filter @statespace/agent start",
    "agent:dev": "bun run --filter @statespace/agent dev"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.7",
    "@graphql-codegen/near-operation-file-preset": "^3.1.0",
    "@graphql-codegen/typescript": "^4.1.6",
    "@graphql-codegen/typescript-operations": "^4.6.1",
    "@types/bun": "latest",
    "@types/parse-gitignore": "^1.0.2",
    "minimatch": "^10.0.3",
    "parse-gitignore": "^2.0.0"
  },
  "peerDependencies": {}
}
