{
  "name": "@statespace/mcp",
  "module": "index.ts",
  "type": "module",
  "version": "0.2.0-beta.1",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "build": "bun run src/index.ts",
    "start": "bun run build",
    "dev": "bun run build && bun run start",
    "docker:build": "docker build -f Dockerfile -t statespace-mcp ../../",
    "docker:run": "docker run -p 8080:8080 statespace-mcp",
    "docker:up": "cd ../../ && docker-compose up mcp-server",
    "docker:down": "cd ../../ && docker-compose down mcp-server"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@langchain/openai": "^0.6.9",
    "@statespace/core": "workspace:*",
    "@statespace/sqlite": "workspace:*",
    "fastmcp": "^3.15.1",
    "zod": "^3"
  }
}
