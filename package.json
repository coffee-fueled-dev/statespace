{
  "name": "@statespace/monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "examples/*",
    "packages/*"
  ],
  "scripts": {
    "context": "bun run scripts/context.ts",
    "memgraph:codegen": "bun run --env-file=.env --filter @statespace/memgraph codegen",
    "memgraph:start": "bun run --env-file=.env --filter @statespace/memgraph start",
    "example:hanoi:bfs": "bun run --elide-lines 0 --filter @statespace/examples hanoi:bfs",
    "example:hanoi:explore": "bun run --elide-lines 0 --filter @statespace/examples hanoi:explore",
    "example:api:bfs": "bun run --elide-lines 0 --filter @statespace/examples api:bfs",
    "example:api:explore": "bun run --elide-lines 0 --filter @statespace/examples api:explore"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/parse-gitignore": "^1.0.2",
    "minimatch": "^10.0.3",
    "parse-gitignore": "^2.0.0"
  },
  "peerDependencies": {},
  "dependencies": {
    "zod": "^4.0.17"
  }
}
